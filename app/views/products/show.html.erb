<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">
    <div class="row">
      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
  </article>
  
    <% if current_user %>
      <article class="order-summary jumbotron">
        <div class="row">
          <h4>Add a Review:</h4>
          <%= form_for([@product, @product.reviews.build]) do |form| %>
            <div class="form-group shadow-textarea">
              <%= form.label :Review %>
              <%= form.text_area :description, class: "form-control z-depth-1" %>
            </div>
            <span>
              <%= form.label :rating %>
              <%= form.select :rating, ([1,2,3,4,5]) %>
            </span>
            <span>
              <%= form.submit class:"btn btn-primary" %>
            </span>
          <% end %>
        </div>
      </article>
    <% end %>
  
  <article class="product-detail">
    <% @reviews.reverse.each do |review| %>
      <div class="row">
        <div class="col-med-6">
          <dl class="dl-horizontal">
            <dt>
              <% if review.user_id == session[:user_id] %>
                <%= link_to fa_icon('trash'), [@product, review], class: 'btn btn-sm btn-danger', method: :delete %>
              <% end %>
              &nbsp; Rating &nbsp;
            </dt>
            <dd>
              <% review.rating.to_i.times do  %>
                <span class="glyphicon glyphicon-star"></span>
              <% end %>
            </dd>
            <dd><%= review.created_at.strftime("%B %-d, %Y") %></dt>
            <dt>Review &nbsp;</dt>
            <dd><%= review.description %></dt>
          </dl> 
        </div>
      </div>
    <% end %>
  </article>
</section>
